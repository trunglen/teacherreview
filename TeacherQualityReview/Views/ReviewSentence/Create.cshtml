@model TeacherQualityReview.Models.ReviewSentence

@{
    ViewBag.Title = "Create";
}

<h2>Đánh giá</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Tạo đánh giá</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="panel panel-default">
            <div class="panel-heading">Chọn môn học</div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.Label("Môn học", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("SubjectID", new SelectList(ViewBag.SubjectID, "ID", "SubjectName"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SubjectID)
                    </div>
                </div>
                </div>
            </div>
    @{
    var i = 1;
    }        
@foreach (var item in ViewBag.ReviewSentences)
{
    
    <div class="panel panel-default">
                    <div class="panel-heading">Câu @i</div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.Label("Mã trạng thái", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                              @ViewBag.StatusID.Find(item.StatusID).Content
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Nội dung đánh giá", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                               @item.Content
                            </div>
                        </div>
                    </div>
                </div>
    i++;
}
                <div class="panel panel-default">
                    <div class="panel-heading">Câu @(ViewBag.ReviewSentences.Count+1)</div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.Label("Mã trạng thái", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("StatusID", new SelectList(ViewBag.StatusID, "ID", "Point"), new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.StatusID)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Nội dung đánh giá", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.Content, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Content)
                            </div>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Taọ" class="btn btn-default" />
                    </div>
                </div>
            </div>
            }

            <div>
                @Html.ActionLink("Danh sách", "Index")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
