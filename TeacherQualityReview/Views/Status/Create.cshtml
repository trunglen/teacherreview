@model TeacherQualityReview.Models.Status

@{
    ViewBag.Title = "Create";
}

<h2>Trạng thái đánh giá</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Tạo mới</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="alert alert-danger" role="alert">  Notes: Trạng thái đánh giá cách nhau bởi dấu phảy Ví dụ: Tốt, Không tốt; Đúng, sai <=> điểm 2,1;1,0</div>
         
        </div>
        <div class="form-group">
            @Html.Label("Điểm đánh giá", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Point, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Point)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Nội dung đánh giá", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Content, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Content)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Danh sách trạng thái", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
