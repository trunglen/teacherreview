@model IEnumerable<TeacherQualityReview.Models.Status>

@{
    ViewBag.Title = "Index";
}

<h2>Quản lí trạng thái đánh giá</h2>

<p>
    @Html.ActionLink("Tạo trạng thái", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ID }) |
      
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
