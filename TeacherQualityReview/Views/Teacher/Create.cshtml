@model TeacherQualityReview.Models.Teacher

@{
    ViewBag.Title = "Create";
}

<h2>Quản lí giảng viên</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Tạo mới</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Mã giảng viên", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ID, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Tên giảng viên", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TeacherName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TeacherName)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Bộ môn", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SubgroupID", new SelectList(ViewBag.SubgroupID, "ID", "SubgroupName"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SubgroupID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Danh sách", "Index")
</div>
