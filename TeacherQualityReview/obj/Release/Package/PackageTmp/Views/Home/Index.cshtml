<script>
    $(document).ready(function () {
        window.chart = Morris.Bar({
            element: 'morris-bar-chart',
            data: [0, 0],
            xkey: 'y',
            ykeys: ['a'],
            labels: ['Điểm trung bình', 'đấ'],
            hoverCallback: function (index, options, content, row) {
                return row.name + " - Điểm TB:" + row.a;
            },
            hideHover: 'auto',
            resize: true
        });
    });
    function select(id) {
        $('#tblReport').html('');
        $('.res').html('');
        $.ajax({
            type: "Get",
            url: '/result/SelectSubject/'+id,
            datatype: "json",
            async: false,// refer notes below
            success: function (data) {
                html = '';
                window.report = data;
                data.forEach(function (item, index) {

                    html += ' <tr><td>' + item.name + '</td>' +
                                '<td>' + item.amount + '</td>' +
                                    '</tr>';
                });
                $('#tblReport').append(html);
                window.list.forEach(function (item, index) {
                    if (item.ID == id) {
                        $('.res').append('<label>Mã môn: ' + item.ID + '</label><br/>' +
                        '<label>Tên môn: ' + item.SubjectName + '</label><br/>' +
                        '<label>Mã Giảng viên: ' + item.TeacherID + '</label><br/>');
                    }
                    html += ' <tr><td>' + item.name + '</td>' +
                                '<td>' + item.amount + '</td>' +
                                    '</tr>';
                });
                
                window.chart.setData(data);
            }
        });
    }
 
</script>

<script src="@Url.Content("~/bower_components/morrisjs/morris.min.js")"></script>
<script>
    $('.aSubject').click(function () {
        alert($('.aSubject').val());
    });
    $(function () {
        $.ajax({
            type: "Get",
            url: '/subject/ListSubjectAjax',
            datatype: "json",  // refer notes below
            success: function (data) {
                console.log(data);
                window.list = data;
                html = '';
                data.forEach(function (item, index) {
                    html += ' <li>'
                             + '<a href="#" value="' + item.ID + '" class="aSubject" onclick="select(\'' + item.ID + '\')">' + item.SubjectName + '</a>'
                            + '</li>';
                });
                $('.slSubject').append(html);
            }
        });
        

    });

</script>